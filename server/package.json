{
    "name": "vk-project-server",
    "version": "0.0.1",
    "description": "Web Interface for VK Project",
    "keywords": [
        "vk",
        "vkui",
        "subscribers"
    ],
    "engines": {
        "node": "v10.16.x",
        "npm": "6.9.x"
    },
    "private": true,
    "repository": {
        "type": "git",
        "url": "https://github.com/mvshmakov/vk-project.git"
    },
    "bugs": {
        "url": "https://github.com/mvshmakov/vk-project/issues"
    },
    "homepage": "https://vk.com/vk-project",
    "main": "index.ts",
    "scripts": {
        "build:prod": "NODE_ENV=production && npm run lint && npm run clean:dist && npm prune && npm dedupe && webpack --progress -p --config=configs/webpack/production.js",
        "bundle-analyzer": "BUNDLE_ANALYZER=true && webpack --config=configs/webpack/production.js",
        "clean": "rm -rfd node_modules webpack-bundle-analyzer.html && npm run clean:dist",
        "clean:dist": "rm -rfd dist",
        "configure": "npm install && ln -sfn ../src ./node_modules/@",
        "start:dev": "NODE_ENV=development && ./node_modules/.bin/nodemon ./src/index.ts --config ./configs/nodemon.json",
        "start:debug": "DEBUG='express:*' && npm run start",
        "start:prod": "pm2 start ./dist/server.min.js --name node -i max",
        "lint": "tslint './src/**/*.ts*' --format stylish --force --fix",
        "ncu": "npx npm-check-updates",
        "ncu:update": "npx npm-check-updates -u",
        "test": "exit 0 && jest --watch --coverage --config=configs/jest.json"
    },
    "dependencies": {
        "compression": "^1.7.4",
        "cookie-parser": "^1.4.4",
        "cors": "^2.8.5",
        "dotenv": "^8.1.0",
        "express": "^4.17.1",
        "express-rate-limit": "^5.0.0",
        "express-validator": "^6.2.0",
        "express-winston": "^3.3.0",
        "helmet": "^3.21.0",
        "mongoose": "^5.7.1",
        "normalizr": "^3.4.1",
        "pm2": "^3.5.1",
        "query-string": "^6.8.3",
        "ramda": "^0.26.1",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@babel/cli": "^7.6.0",
        "@babel/core": "^7.6.0",
        "@babel/preset-env": "^7.6.0",
        "@types/compression": "^1.0.1",
        "@types/cookie-parser": "^1.4.2",
        "@types/cors": "^2.8.6",
        "@types/dotenv": "^6.1.1",
        "@types/express": "^4.17.1",
        "@types/express-rate-limit": "^3.3.2",
        "@types/express-winston": "^3.0.4",
        "@types/helmet": "0.0.44",
        "@types/jest": "^24.0.18",
        "@types/js-cookie": "^2.2.2",
        "@types/mongoose": "^5.5.17",
        "@types/node": "^12.7.5",
        "@types/ramda": "^0.26.21",
        "awesome-typescript-loader": "^5.2.1",
        "babel-loader": "^8.0.6",
        "file-loader": "^4.2.0",
        "html-webpack-plugin": "^3.2.0",
        "image-webpack-loader": "^6.0.0",
        "jest": "^24.9.0",
        "nodemon": "^1.19.2",
        "ts-node": "^8.4.1",
        "tslint": "^5.20.0",
        "typescript": "^3.6.3",
        "uglifyjs-webpack-plugin": "^2.2.0",
        "webpack": "^4.40.2",
        "webpack-bundle-analyzer": "^3.5.0",
        "webpack-cli": "^3.3.8",
        "webpack-config": "^7.5.0",
        "webpack-dev-middleware": "^3.7.1",
        "webpack-merge": "^4.2.2"
    }
}
